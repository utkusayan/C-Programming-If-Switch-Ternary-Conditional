int main()
{
    int sayi;

    printf("Sayiyi giriniz (1-5):");
    scanf("%d",&sayi);
    switch(sayi)
    {
    case 1:
        printf("bir");
        break;
     case 2:
        printf("iki");
        break;
     case 3:
        printf("uc");
        break;
     case 4:
        printf("dort");
        break;
     case 5:
        printf("bes");
        break;
     default:
        {
            printf("yanlis deger girdiniz.");
        }
    }
    return 0;
