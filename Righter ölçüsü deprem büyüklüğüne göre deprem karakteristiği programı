#include <stdio.h>
#include <stdlib.h>

int main()
{
    float N;
    printf("Righter cinsinden depream buyuklugunu giriniz:");
    scanf("%f",&N);
    if(N<5.0)
    {
        printf("Ufak ve hasarsiz");
    }
    else if(N>=5.0&&N<5.5)
    {
        printf("Az hasarli");
    }
    else if(N>=5.5&&N<6.5)
    {
        printf("Ciddi hasar:Catlamalar ve Cokmeler olabilir");
    }
    else if(N>=6.5&&N<7.5)
    {
        printf("Felaket:Evler ve binalar cokebilir.");
    }
    else if(N>=7.5)
    {
        printf("Facia:Butun yapilar yok olur.");

    }
    return 0;
}
